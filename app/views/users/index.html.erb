<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'list', user: current_user %>
			<%= render 'list2', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th> Image</th>
						<th> Name</th>
					</tr>
				</thead>
				<tbody>
		            <% @users.each do |user| %>
		            <tr>
		            	<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: 'no_image.jpg',size: '50x50' %></td>
			            <td><%= user.name %></td>
			            <td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
