<div class="block">
  <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :Name%><br/>
      <%= f.text_field :username, autofocus: true, class: "col-lg-4"%>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.text_field :password, autocomplete: "current-password",class: 'col-lg-4' %>
    </div>

     <% if devise_mapping.rememberable? %>
        <div class="field">
           <%= f.check_box :remember_me %>
           <%= f.label :remember_me %>
        </div>
     <% end %>

      <div class="actions">
       <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
  <footer>CopyRight Infratop.inc</footer>

