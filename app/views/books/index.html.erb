<% if @book.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<%= render 'users/list2', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
		            <% @books.each do |book| %>
		            <tr>
		            	<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: 'no_image.jpg',size: '40x40' %></td>
			            <td><%= book.title %></td>
			            <td><%= book.opinion %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>