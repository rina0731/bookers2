<% if @book.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h1> Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Opinion</h4>
    <%= f.text_area :opinion, class: "book_body" %>
    <%= f.submit 'Update Book' %>   
    <br><%= link_to "Show", book_path(@book.id) %>
    | <%= link_to "Back", books_path, class: "back" %>
 
<% end %>